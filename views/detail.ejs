<%- include('partials/header', { title: anime.judul + ' - ZANNIME' }) %>
<div class="container mt-5">
  <div class="row">
    <!-- Anime Poster -->
    <div class="col-md-4">
      <div class="card shadow-sm position-relative">
        <!-- Poster Image -->
        <img src="<%= anime.poster %>" alt="<%= anime.judul %>" class="img-fluid rounded">

        <!-- Score Overlay (Top Left) -->
        <div class="position-absolute top-0 start-0 p-2">
          <% if (anime.skor >= 8) { %>
            <span class="badge bg-success fs-5"><%= anime.skor %></span>
          <% } else if (anime.skor >= 5) { %>
            <span class="badge bg-warning fs-5"><%= anime.skor %></span>
          <% } else { %>
            <span class="badge bg-danger fs-5"><%= anime.skor %></span>
          <% } %>
        </div>

        <!-- Status Overlay (Bottom Right) -->
        <div class="position-absolute bottom-0 end-0 p-2">
          <% if (anime.status === 'Ongoing') { %>
            <span class="badge text-dark bg-white fs-5"><%= anime.status %></span>
          <% } else { %>
            <span class="badge text-bg-dark fs-5"><%= anime.status %></span>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Anime Details -->
    <div class="col-md-8">
      <h1 class="display-4"><%= anime.judul %></h1>
      <div class="my-3">
        <p><strong>Japanese:</strong> <%= anime.japanese %></p>
        <p><strong>Producer:</strong> <%= anime.produser %></p>
        <p><strong>Type:</strong> <%= anime.tipe %></p>
        <p><strong>Total Episodes:</strong> <%= anime.totalEpisode %></p>
        <p><strong>Duration:</strong> <%= anime.durasi %></p>
        <p><strong>Release Date:</strong> <%= anime.tanggalRilis %></p>
        <p><strong>Studio:</strong> <%= anime.studio %></p>
        <p><strong>Genres:</strong></p>
        <ul class="list-inline">
          <% anime.genres.forEach(genre => { %>
            <li class="list-inline-item"><a href="/genres/<%= genre.slug %>" class="btn btn-outline-dark btn-sm"><%= genre.judul %></a></li>
          <% }) %>
        </ul>
      </div>

      <!-- Synopsis -->
      <div class="my-4">
        <h4>Synopsis</h4>
        <p class="text-justify"><%= anime.sinopsis.join(' ') %></p>
      </div>
    </div>
  </div>

  <!-- Episodes Section -->
  <div class="mt-5">
    <h2>Episodes :</h2>
    <form action="/episode" method="get" class="mb-4">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Episode</th>
          <th>Release Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% anime.episodeList.forEach(episode => { %>
          <tr>
            <td><%= episode.judul %></td>
            <td><%= episode.tanggalRilis %></td>
            <td>
              <button type="submit" name="slug" value="<%= episode.slug %>" class="btn btn-dark btn-sm">View</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </form>
  </div>
</div>

<%- include('partials/footer') %>
<!-- Bootstrap JS -->
<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>