<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Results for <%= query %> - ZANNIME</title>
  <!-- Bootstrap CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .flex-wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    .content {
      flex: 1;
    }
  </style>
</head>
<body>
  <%- include('navbar') %>
  <div class="flex-wrapper">
    <div class="container content">
      <h1 class="mt-4">Search Results for <%= query %></h1>
      <form action="/search" method="get" class="mb-4">
        <div class="input-group">
          <input type="text" name="q" class="form-control" placeholder="Search anime...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Judul</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(result => { %>
            <tr>
              <td><%= result.judul %></td>
              <td>
                <a href="/anime/<%= result.slug %>" class="btn btn-primary btn-sm">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- Pagination -->
      <nav aria-label="Search results pagination">
        <ul class="pagination justify-content-center">
          <li class="page-item <%= !pagination.prevPage ? 'disabled' : '' %>">
            <a class="page-link" href="?q=<%= query %>&page=<%= pagination.prevPage %>">Previous</a>
          </li>
          <%
            const maxPages = 5;
            const halfMax = Math.floor(maxPages / 2);
            let startPage = Math.max(1, pagination.currentPage - halfMax);
            let endPage = Math.min(pagination.totalPages, startPage + maxPages - 1);
            if (endPage - startPage < maxPages - 1) {
              startPage = Math.max(1, endPage - maxPages + 1);
            }
            for (let i = startPage; i <= endPage; i++) {
          %>
            <li class="page-item <%= pagination.currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="?q=<%= query %>&page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
          <li class="page-item <%= !pagination.nextPage ? 'disabled' : '' %>">
            <a class="page-link" href="?q=<%= query %>&page=<%= pagination.nextPage %>">Next</a>
          </li>
        </ul>
      </nav>
    </div>
    <%- include('footer') %>
  </div>
  <!-- Bootstrap JS -->
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>